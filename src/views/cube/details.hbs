<main>
  <h1>{{cube.name}}</h1>
  <img class="cube" src="{{cube.imageUrl}}">
  <div class="details">
    <p><span>Description:</span>{{cube.description}}</p>
    <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/cubes/{{cube._id}}/attach">Attach</a>
  </div>
  <h1>Rubiks Cube</h1>
            <img class="cube" src="https://images-na.ssl-images-amazon.com/images/I/71WS9kb-JFL._SL1300_.jpg">
            <div class="details">
                <p><span>Description:</span>Some Description....</p>
                <p><span>Difficulty level:</span> 6</p>
                <a class="btn" href="#">Back</a>
            </div>
            <h2>Accessories</h2>
            <div class="accessories">
              {{#each cube.accessories}}
                <div class="accessory">
                    <img src="{{this.imageUrl}}" alt="{{this.name}}">
                    <h3>{{this.name}}</h3>
                    <p>{{this.description}} </p>
                </div>
                {{else}}
                <h3 class="italic">This cube has no accessories yet...</h3>
                 {{/each}}
            </div>
</main>